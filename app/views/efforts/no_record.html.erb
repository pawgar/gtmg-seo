<style>
    .backdrop{
        background: rgba(0, 0, 0, 0.32);
        position: absolute;
        width: 100%;
        height: 100%;
        margin-top: -100px;
        margin-left: -15px;
    }
</style>

<div class="backdrop">
</div>
<div class="col-md-6 col-md-offset-3">

<div class="box">
    <div class="box-header with-border">
        <h4 class="no-margin">Efforts Report</h4>
    </div>
    <div class="box-body">
        
           <%= link_to new_effort_path, remote: true, data: {toggle: "modal", dismiss: "modal"}, class: "hover-e1" do %>
              
            <div class="col-md-6">
                             
                <div class="small-box bg-green text-center">
                   <div class="inner">
                      <h3><i class="fa fa-plus"></i> </h3>
                      <p>New Record</p>
                   </div>
                   <div class="icon">
                      <i class="ion ion-bag"></i>
                   </div>
                 
                </div>
            </div> <% end %>
            
             <%= link_to "/upload-effort-file", class: "hover-e1" do %>
            <div class="col-md-6">
                             
                <div class="small-box bg-blue text-center">
                   <div class="inner">
                      <h3><i class="fa fa-upload"></i> </h3>
                      <p>Upload Sheet</p>
                   </div>
                   <div class="icon">
                      <i class="ion ion-bag"></i>
                   </div>
                 
                </div>
            </div>
            <% end %>
    </div>
</div>

</div>