<%= form_for(@offpage_cat, remote: true) do |f| %>

<div id="error_explanation" class="bg-danger text-danger">
 </div> 
      <div class="form-group">
         <%= f.label :code_letter, "<i class='fa fa-code margin-r-5'> </i> Code Letter".html_safe %> 
         <%= f.text_field :code_letter, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :category_name, "<i class='fa fa-align-justify margin-r-5'> </i> Category Name".html_safe %>
        <%= f.text_area :category_name, class: 'form-control', rows: '4' %>
      </div>
      
      
  <div class="actions">
     <%= f.button  @offpage_cat.new_record? ? "Create Category" : "Update Category", :class => "btn btn-primary", data: {disable_with: "<i class='fa fa-refresh fa-spin'></i> Please wait..."} %>
     <%#= f.button "Proceed", :class => "btn btn-primary", data: {disable_with: "<i class='fa fa-refresh fa-spin'></i> Please wait..."} %>
  
  </div>
<% end %>
