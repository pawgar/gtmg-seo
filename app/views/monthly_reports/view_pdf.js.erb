// Add the dialog title
$('#dialog h3').html("<i class='fa fa-fw fa-file-pdf-o'></i> <%= @pdf_file.client.name %> - <%= @pdf_file.date.to_date.strftime('%B %Y') if @pdf_file.date.present? %> Monthly Report");
 
// Render the edit form
$('.modal-body').html('<%= j render("iframe") %>');
 
// Show the dynamic dialog
$('#dialog').modal("show");
 
// Set focus to the first element
$('#dialog').on('shown.bs.modal', function () {
	  $('.first_input').focus()
  })
