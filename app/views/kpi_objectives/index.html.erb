<% @header_title = "Kpi Objectives" %>
<%# @menu_user = "active" %>

          <div class="box" id="data-list">
            <div id="data-list-x">
            <div class="box-header">
              <%= link_to new_kpi_objective_path, remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Please wait..."}, class: "btn btn-primary btn-flat pull-right margin-left" do %>
                <i class="fa fa-bullseye"></i> Add KPI Objective
              <% end %>
              
              <%#= link_to '/import-strategy-form', remote: true, data: {disable_with: "<i class='fa fa-refresh fa-spin'></i> Please wait..."}, class: "btn btn-success btn-flat pull-right" do %>
                <!--<i class="fa fa-upload"></i> Upload Excel Sheet-->
              <%# end %>
              
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
              
              <!--input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Search in table"-->
              <table class="footable table table-stripped table-bordered is-breakable" data-page-size="" data-limit-navigation="" data-filter=#filter>
                 <thead>
                    <tr>
                       <th width="80%">Description</th>
                       <th data-hide="phone" width="20%">Date Added</th>
                    </tr>
                 </thead>
                 <tbody>
                       <% @kpi_objectives.each do |kpi_objective| %>  
                       <tr height="57px" id="kpi-objective-<%= kpi_objective.id %>" class="user_listing">
                          <td width="10%">
                             <%= simple_format(kpi_objective.title) %>
                             <div id="my_box" class="hidden_option">
                                <%= link_to edit_kpi_objective_path(kpi_objective.id), remote: true, data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> "}, class: "btn btn-box-tool"  do %>
                                <i class="fa fa-edit text-blue"></i> 
                                <% end %>
                                &nbsp; : &nbsp
                                <%= link_to kpi_objective, method: :delete, data: { confirm: 'Are you sure?' }, title: 'delete' do %>
                                <i class="fa fa-trash-o text-red"></i>
                                 <% end %>
                             </div>
                          </td>
                          <td ><%= kpi_objective.created_at.strftime('%Y-%m-%d') %> </td>
                       </tr>
                       <% end %>
                  </tbody>
                 
              </table>
            </div>
            <!-- /.box-body -->
            

          </div>
          </div>
          



<script>
function effectLoad(){
        $(document).ready(function() {
            $('.footable').footable({ paginate:false });
        });
}

effectLoad();

</script>