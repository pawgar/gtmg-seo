<%= form_for(@client, remote: true, url: {controller: "clients", action: @action}) do |f| %>

<div id="error_explanation" class="bg-danger text-danger">
</div>
<br/>
    
    <div class="form-group">
        <%= f.label :name, "<i class='fa fa-link margin-r-5'> </i> Website URL".html_safe %> 
        <%= f.text_field :name, class: 'form-control' %>
    </div>
      
    <div class="form-group">
        <%= f.label :notes, "<i class='fa fa-file-text-o margin-r-5'> </i> Notes".html_safe %> 
        <%= f.text_area :notes, class: 'form-control', rows: '4' %>
    </div>
    
    
      
  <div class="actions">
     <%= f.button  @client.new_record? ? "Create Client" : "Update Client", :class => "btn btn-primary", data: {disable_with: "<i class='fa fa-refresh fa-spin'></i> Please wait..."} %>
    
  
  </div>
<% end %>
